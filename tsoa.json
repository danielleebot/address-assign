{
  "entryFile": "src/app.ts",
  "noImplicitAdditionalProperties": "throw-on-extras",
  "controllerPathGlobs": ["src/**/controller.ts"],
  "spec": {
    "outputDirectory": "dist/static",
    "specVersion": 3,
    "basePath": "",
    "securityDefinitions": {
      "jwt": {
        "type": "http",
        "scheme": "bearer",
        "bearerFormat": "JWT"
      }
    }
  },
  "routes": {
    "routesDir": "src/routes",
    "routesFileName": "_routes_tsoa.ts",
    "middleware": "koa"
  }
}
